pipeline{
    agent node{
        label 'nginx'
        customWorkspace '/usr/share/nginx/html'
    }
    environment{
        HTML_PATH '/usr/share/nginx/html/AddWebpage.html'
    }
    stages {
        stage('build') {
            steps {
                echo build
            }
        }
        stage('test'){
            steps{
                #Test javascript
                echo 'test stage'
            }
        }
        stage('deploy'){
            steps{
                echo 'deploy stage'

            }
        }
    }

}
